<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
    FXML Demo Layout
    Diese Datei definiert die UI-Struktur, die von FXMLDemo.java geladen wird.
    Der Controller behandelt alle Button-Aktionen.
-->

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.bht.pr2.lession08.su2_e01_fxml.DemoController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="FXML Demo" />

    <HBox alignment="CENTER" spacing="10">
        <Label text="Name:" />
        <TextField fx:id="nameField" promptText="Namen eingeben..." />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleGreetButton" text="Begrüßen" />
        <Button onAction="#handleCountButton" text="Zählen" />
        <Button onAction="#handleClearButton" text="Löschen" />
    </HBox>

    <Label fx:id="greetingLabel" style="-fx-font-size: 14px;" />

</VBox>
